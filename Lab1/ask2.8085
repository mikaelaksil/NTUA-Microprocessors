IN 10H
MVI B,01H		;500=1F4H 
MVI C,F4H		;Store value in BC for DELB 0.5=500ms
MVI E,01H		;Store location of first LED

START:
LDA 2000H
MOV D,A 
RAR 			;CY=LSB
JNC START 		;IF LSB=1 STOP THE LED
MOV A,D 
CALL DELB 		;WAIT 0.5s
RAL 			;CY=MSB
JC MOVE_RIGHT 	;IF MSB=0 MOVE TO RIGHT

MOVE_LEFT:		;ELSE MOVE TO LEFT
MOV A,E 
CMA 			;COMPLEMENT ACCUMULATOR SO THE CORRECT LED IS SHOWN
STA 3000H 
CMA 			;RETURN TO PREVIOUS A
RLC 			;ROTATE LEFT A TO GET NEXT LED
MOV E,A 
JMP START

MOVE_RIGHT:
MOV A,E
CMA
STA 3000H
CMA
RRC 			;RÏTATE RIGHT A TO GET NEXT LED
MOV E,A
JMP START
END